[Unit]
Description=Tethys uWSGI
After=syslog.target

[Service]
ExecStartPre=/bin/bash -c 'mkdir -p /run/uwsgi; chown www:www /run/uwsgi'
ExecStart=/opt/conda/envs/tethys/bin/uwsgi --yaml /usr/lib/tethys/src/tethys_portal/tethys_uwsgi.yml --uid www --gid www
ExecStartPost=/bin/bash -c 'chown -R www:www /run/uwsgi'
Restart=always
KillSignal=SIGQUIT
Type=notify
StandardError=syslog
NotifyAccess=all

[Install]
WantedBy=multi-user.target